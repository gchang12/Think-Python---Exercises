import math

def check_nat(n):
    """This function takes any argument, and raises a type error if it is not a positive integer.

    Input: anything
    Output: Boolean indicating if it is a natural number or not

    """
    if not type(n)==int or n<=0:
        raise TypeError

def est_exp1(n):
    """This function takes a positive number as an argument, and estimates pi using partial sums.

    Input: natural number
    Output: estimate of exp(1)

    """
    total=0
    check_nat(n)
    for i in range(n):
        total+=1/math.factorial(i)
    return total

def est_exp2(n):
    """This function takes a positive number as an argument, and estimates pi using the 'interest-rate method'.

    Input: natural number
    Output: estimate of exp(1)

    """
    check_nat(n)
    return (1+1/n)**n
